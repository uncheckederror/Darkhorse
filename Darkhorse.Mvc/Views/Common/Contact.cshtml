    <div class="form-row">
        <div class="col-6">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">County</span>
                </div>
                <input type="text" class="form-control" value="@Model?.SelectedContact?.COUNTRY">
            </div>
        </div>
        <div class="col-6">
            <div class="input-group">
                <div class="input-group-prepend">
