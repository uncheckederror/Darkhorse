                    <span class="input-group-text">Contact First Name</span>
                </div>
                <input type="text" class="form-control" value="@Model?.SelectedContact?.F_NAME">
            </div>
        </div>
    </div>
</div>
<div class="form-group">
    <div class="form-row">
        <div class="col-3">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Street Number</span>
                </div>
                <input type="text" class="form-control" value="@Model?.SelectedContact?.STREET_NO">
            </div>
        </div>
        <div class="col-3">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Extension</span>
                </div>
                <input type="text" class="form-control" value="@Model?.SelectedContact?.STREET_EXTENSION">
            </div>
        </div>
        <div class="col-3">
            <div class="input-group">
                <div class="input-group-prepend">
