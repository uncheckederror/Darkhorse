@model DarkHorse.Mvc.CommonContactDetail
@{
    ViewData["Title"] = "Contact";
}

<p class="display-4 pr-3">🏠 Contacts</p>
<div class="form-group">
    <div class="form-row">
        <div class="col-12">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">REETs Contact Street Address</span>
                </div>
                <input type="text" class="form-control" value="@Model?.SelectedContact?.STREET_ADDR" readonly>
            </div>
        </div>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-hover table-bordered table-striped">
        <thead>
            <tr>
                <th scope="col">
                    Contact Name
                </th>
                <th scope="col">
                    Street Address
                </th>
                <th scope="col">
                    City
                </th>
                <th scope="col">
                    Source
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var contact in Model.Contacts)
                {
                    if (contact.CONTACT_ID == Model?.SelectedContact?.CONTACT_ID)
                    {
                        <tr class="table-success">
                            <td>
                                @contact.NAME
                            </td>
                            <td>
                                @contact.STREET_ADDR
                            </td>
                            <td>
                                @contact.CITY
                            </td>
                            <td>
                                @contact.ROW_SOURCE
                            </td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td>
                                @contact.NAME
                            </td>
                            <td>
                                @contact.STREET_ADDR
                            </td>
                            <td>
                                @contact.CITY
                            </td>
                            <td>
                                @contact.ROW_SOURCE
                            </td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>
<div class="form-group">
    <div class="form-row">
        <div class="col-6">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Contact Last Name</span>
