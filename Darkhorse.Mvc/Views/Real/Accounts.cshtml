    </div>
    <div class="form-group">
        <div class="form-row">
            <div class="col-3">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Contact Type</span>
                    </div>
                    <input asp-for="Query.ContactType" type="text" class="form-control" id="contactType" placeholder="Contact Type" title="Contact Type" readonly>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="form-row">
            <div class="col-3">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Situs Street #</span>
                    </div>
                    <input asp-for="Query.StreetNumber" type="number" class="form-control" id="streetNumber" placeholder="Enter Street Number" title="Situs Street #">
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="form-row">
            <div class="col-6">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Situs Street Name</span>
                    </div>
                    <input asp-for="Query.StreetName" type="text" class="form-control" id="streetName" placeholder="Situs Street Name" title="Situs Street Name" readonly>
                </div>
            </div>
            @*<div class="col-2">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Sort</span>
                    </div>
                    <input asp-for="Query.StreetNameSort" type="text" class="form-control" id="streetNameSort" aria-describedby="streetNameSort" placeholder="Sort" title="Sort">
                </div>
            </div>*@
        </div>
    </div>
    <div class="form-group">
        <div class="form-row">
            <div class="col-6">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Section Township Range</span>
                    </div>
                    <input asp-for="Query.SectionTownshipRange" type="text" class="form-control" id="str" placeholder="Section Township Range" title="Section Township Range" readonly>
                </div>
            </div>
            <div class="col-3">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Account Group</span>
                    </div>
                    <input asp-for="Query.AccountGroup" type="number" class="form-control" id="accountGroup" aria-describedby="accountGroup" placeholder="Account Group" title="Account Group">
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="form-row">
            <div class="col-3">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Quarter Section</span>
                    </div>
                    <select asp-for="Query.QuarterSection" class="form-control" title="Quarter Section">
                        <option></option>
                        <option>NE</option>
                        <option>NW</option>
                        <option>SE</option>
                        <option>SW</option>
                    </select>
                </div>
            </div>
            <div class="col-6">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Tag Codes</span>
                    </div>
                    <input asp-for="Query.Tags" type="text" class="form-control" id="tags" aria-describedby="tags" placeholder="Tag Codes" title="Tag Codes">
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <button class="btn btn-danger" type="submit">Submit</button>
    </div>
</form>

@{
    if (Model != null && Model.Accounts.ToArray().Length > 0)
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover table-sm table-bordered">
                <thead>
                    <tr>
                        <th scope="col" class="min-vw-30">
                            Account Number
                        </th>
                        <th scope="col">
                            Contact
                        </th>
                        <th scope="col">
                            Contact Type
                        </th>
                        <th scope="col">
                            Situs Address
                        </th>
                        <th scope="col">
                            Property Class
                        </th>
                        <th scope="col">
                            Parcel Acres
                        </th>
                        <th scope="col">
                            Tax Code
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var account in Model.Accounts)
                        {
                            <tr>
                                <td scope="row" class="account-number">
                                    @account.ACCT_NO
                                </td>
                                <td>
                                    @account.RP_ACCT_ID
                                </td>
                                <td>
                                    @account.LAND_FOR_BLDG_ID
                                </td>
                                <td>
                                    @account.CREATED_DT
                                </td>
                                <td>
                                    @account.LAST_UPDATE_FOR_EXPORT
                                </td>
                                <td>
                                    @account.NEIGHBORHOOD_CODE
                                </td>
                                <td>
                                    @account.PP_AS_RP_FLAG
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    }
}

